@page
@model RazorPages.Pages.CarritoModel
@{
    ViewData["Title"] = "Carrito";
}

<h2>Carrito de compras</h2>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Autor</td>
                <td>$@item.Precio</td>
                <td>@item.Cantidad</td>
                <td>$@(item.Precio * item.Cantidad)</td>
            </tr>
        }
        </tbody>
    </table>

    <h4>Total general: $@Model.Total</h4>
}
else
{
    <p>Tu carrito está vacío</p>
}