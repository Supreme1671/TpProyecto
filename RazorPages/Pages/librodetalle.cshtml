@page "{id:int}"
@model RazorPages.Pages.librodetalleModel
@{
    ViewData["Title"] = "Detalle del Libro";
}

@if (Model.Libro != null)
{
    <div class="card">
        <div class="card-body">
            <div class="row align-items-center">
                    <div class="col-md-4">
                        <img src="~/img/@Model.Libro.Imagen" alt="@Model.Libro.Titulo" class="img-fluid" style="max-width: 400px; min-width: 300px; height: auto;">
                    </div>
                <div class="col-md-8">
                    <h3 style="color: white;">@Model.Libro.Titulo</h3>
                    <h5 style="color: rgba(255, 255, 255, 0.425);" class="card-subtitle mb-2">Autor: @Model.Libro.Autor (@Model.Libro.Anio)</h5>
                    <p class="card-text">@Model.Libro.Descripcion</p>
                    <p><strong>Precio:</strong> $@Model.Libro.Precio</p>
                    <button class="btn btn-success">Comprar</button>
                    <a asp-page="/libros" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Libro no encontrado.</p>
}

