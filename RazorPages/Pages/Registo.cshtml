@page
@model Models.Registro
@{
    ViewData["Title"] = "Registro - Bookflix";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/registgiro.css" />
    <script>
        function mostrarOcultar() {
            const contrasena = document.getElementById("contrasena");
            contrasena.type = contrasena.type === "password" ? "text" : "password";
        }
    </script>
</head>
<body>

    <div class="registro-container">
        <h2>Registro en Bookflix</h2>
        <form method="post">
            <div>
                <label asp-for="Correo"></label>
                <input asp-for="Correo" type="email" placeholder="ejemplo@gmail.com" required pattern=".+@gmail\.com" />
            <div/>
        <form/>