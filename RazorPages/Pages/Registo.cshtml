@page
@model RazorPages.Pages.RegistoModel
@{
    ViewData["Title"] = "Registro";
}

<h2>Registro de Usuario</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Registro.Correo"></label>
        <input asp-for="Registro.Correo" class="form-control" />
        <span asp-validation-for="Registro.Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Registro.Contrasena"></label>
        <input asp-for="Registro.Contrasena" type="password" class="form-control" />
        <span asp-validation-for="Registro.Contrasena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>
