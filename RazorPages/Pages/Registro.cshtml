@page
@model RazorPages.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Registro.Correo" style="color: white;"></label>
        <input asp-for="Registro.Correo" class="form-control" style="color: white;"/>
        <span asp-validation-for="Registro.Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Registro.Contrasena" style="color: white;"></label>
        <input asp-for="Registro.Contrasena" type="password" class="form-control" style="color: white;"/>
        <span asp-validation-for="Registro.Contrasena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>
